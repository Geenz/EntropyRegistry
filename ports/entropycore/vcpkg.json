{
  "name": "entropycore",
  "version": "1.1.7",
  "description": "Core utilities and concurrency primitives for Entropy Engine",
  "homepage": "https://github.com/Geenz/EntropyCore",
  "license": "MPL-2.0",
  "supports": "!uwp",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    {
      "name": "boost-type-index",
      "version>=": "1.88.0"
    },
    {
      "name": "efsw",
      "version>=": "1.5.0"
    }
  ],
  "features": {
    "tracy": {
      "description": "Enable Tracy profiler integration",
      "dependencies": [
        "tracy"
      ]
    },
    "tests": {
      "description": "Enable testing with Catch2",
      "dependencies": [
        "catch2"
      ]
    }
  }
}
